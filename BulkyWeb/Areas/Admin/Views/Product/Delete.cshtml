@model Product

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4  mb-5">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
			<hr />
		</div>

		<div asp-validation-summary="All"></div>

		<div class="mb-3 row p-1">
			<label asp-for="Title" class="p-0 ">Product Title<span class="text-danger">*</span></label>
			<input asp-for="Title" disabled type="text" class=" form-control " />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Description" class="p-0">Description<span class="text-danger">*</span></label>
			<input asp-for="Description" disabled class=" form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="ISBN" class="p-0">ISBN<span class="text-danger">*</span></label>
			<input asp-for="ISBN" disabled class=" form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Author" class="p-0">Author<span class="text-danger">*</span></label>
			<input asp-for="Author" disabled class=" form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="ListPrice" class="p-0">List Price<span class="text-danger">*</span></label>
			<input asp-for="ListPrice" disabled class=" form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Price" class="p-0">Price<span class="text-danger">*</span></label>
			<input asp-for="Price" disabled class=" form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="PriceFifty" class="p-0">Price Fifty<span class="text-danger">*</span></label>
			<input asp-for="PriceFifty" disabled class=" form-control" />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="PriceHundred" class="p-0">Price Hundred<span class="text-danger">*</span></label>
			<input asp-for="PriceHundred" disabled class=" form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control" style="width:150px">
					Delete
				</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control" style="width:150px">
					BacktoList
				</a>
			</div>
		</div>


	</div>

</form>

