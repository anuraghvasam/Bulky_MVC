@model ProductViewModel

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> @(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Product.Id" hidden />
			<input asp-for="Product.ImageUrl" hidden />

			<div class="row">
				<div class="col-2">
					<img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
				</div>
				
				<div class="col-10">
					<div class="border p-3 mt-4 mb-5">
						<div class="row pb-2">
							<h2 class="text-primary">
								@(Model.Product.Id != 0 ? "Update" : "Create") Product
							</h2>
							<hr />
						</div>

						<div asp-validation-summary="All"></div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.Title" class="p-0 ">Product Title<span class="text-danger">*</span></label>
							<input asp-for="Product.Title" type="text" class=" form-control "></input>
							<span asp-validation-for="Product.Title" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.Description" class="p-0">Description<span class="text-danger">*</span></label>
							<textarea asp-for="Product.Description" class=" form-control"></textarea>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.ISBN" class="p-0">ISBN<span class="text-danger">*</span></label>
							<input asp-for="Product.ISBN" class=" form-control" />
							<span asp-validation-for="Product.ISBN" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.Author" class="p-0">Author<span class="text-danger">*</span></label>
							<input asp-for="Product.Author" class=" form-control" />
							<span asp-validation-for="Product.Author" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.ListPrice" class="p-0">List Price<span class="text-danger">*</span></label>
							<input asp-for="Product.ListPrice" class=" form-control" />
							<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.Price" class="p-0">Price<span class="text-danger">*</span></label>
							<input asp-for="Product.Price" class=" form-control" />
							<span asp-validation-for="Product.Price" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.PriceFifty" class="p-0">Price Fifty<span class="text-danger">*</span></label>
							<input asp-for="Product.PriceFifty" class=" form-control" />
							<span asp-validation-for="Product.PriceFifty" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.PriceHundred" class="p-0">Price Hundred<span class="text-danger">*</span></label>
							<input asp-for="Product.PriceHundred" class=" form-control" />
							<span asp-validation-for="Product.PriceHundred" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.CategoryId" class="p-0">Price Hundred<span class="text-danger">*</span></label>
							<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class=" form-select">
								<option disabled selected>--Select Category--</option>
							</select>
							<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
						</div>

						<div class="mb-3 row p-1">
							<label asp-for="Product.ImageUrl" class="p-0">Image Url<span class="text-danger">*</span></label>
							<input type="file" name="file" class=" form-control"
						</div>


						<div class="row">
							<div class="col-6 col-md-3">

								@if (@Model.Product.Id != 0)
								{
									<button type="submit" class="btn btn-primary form-control" style="width:150px">
										Update
									</button>
								}
								else
								{
									<button type="submit" class="btn btn-primary form-control" style="width:150px">
										Create
									</button>
								}

							</div>
							<div class="col-6 col-md-3">
								<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control" style="width:150px">
									BacktoList
								</a>
							</div>
						</div>


					</div>
				</div>

			
			</div>

		</form>
	</div>
</div>

